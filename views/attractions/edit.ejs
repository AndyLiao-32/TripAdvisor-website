<%- include("../partials/header") %>

<div class=" container">
	<div class="row">
		<h1 style="text-align: center">Edit <%= attraction.name %></h1>
		<div style="margin: 30px auto; width: 30%;">
			<form action="/attractions/<%= attraction._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="attraction[name]" value="<%= attraction.name %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="attraction[image]" value="<%= attraction.image %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" 
						   name="attraction[price]" value="<%= attraction.price %>" min="0.01" step="0.01">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="attraction[description]" 
						   value="<%= attraction.description %>">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
			</form>
			<a href="/attractions/<%= attraction._id %>">Go Back</a>
		</div>
	</div>
</div>

<%- include("../partials/footer") %>